---
import Icon from "./Icon.astro";
const { icon, trait, description } = Astro.props;
---

<div
  class="border border-solid border-neutral rounded-xl p-6 flex flex-col gap-2 lg:gap-4"
>
  <Icon icon={icon} color="hsl(var(--p))" size="2.5rem" />
  <h2 class="text-3xl font-bold">{trait}</h2>
  <p class="text-gray-500">{description}</p>
</div>
